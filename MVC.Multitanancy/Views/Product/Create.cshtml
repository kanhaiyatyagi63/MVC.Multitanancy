@{
    ViewData["Title"] = "Create";
}
@model MVC.Multitanancy.Models.Product.CreateProductModel

<div class="row">  
    <div class="col-md-6 mx-auto">  
        <div class="card">  
            <div class="card-header bg-danger text-white">  
                <h5 class="text-uppercase text-center">Create Product</h5>  
            </div>  
            <div class="card-body">  
                <form asp-action="Create">  
                    <div asp-validation-summary="All" class="text-danger"></div>  
                    <div class="form-group">  
                        <label asp-for="Name"></label>  
                        <input asp-for="Name" class="form-control" />  
                        <span asp-validation-for="Name" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Description"></label>  
                        <input asp-for="Description" class="form-control" />  
                        <span asp-validation-for="Description" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Rate"></label>  
                        <input asp-for="Rate" class="form-control" />  
                        <span asp-validation-for="Rate" class="text-danger"></span>  
                    </div>  
                    <input type="submit" value="Create" class="btn btn-sm btn-success text-uppercase rounded-0" />  
                </form>  
            </div>  
        </div>  
    </div>  
</div> 